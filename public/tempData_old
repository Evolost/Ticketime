<script type="text/javascript">
function initScrollEvents(){
	backTopShow = false;
	var backTop = $("back_top");
	var offset = 60;
		window.onscroll = function(){
		if(!backTopShow && scrollY > offset){
			backTop.show();
			backTopShow = true;
		}
		if(backTopShow && scrollY < offset){
			backTop.hide();
			backTopShow = false;
		}
	};
};
initScrollEvents();
</script>
<script type="text/javascript">
var _gwtc_ = _gwtc_ || [];
_gwtc_.push(["t",new Date().getTime()]);

R.domready(function(){
	var myCookie = getCookie("_gwtc_");
	if(myCookie==""){
		//TODO:加到trace方法中去
		R.ajax({
			'url':"/trace.xhtml",
			'callback':function(result){
				var ck = getCookie("_gwtc_");
				addTrace(ck);
			}
		});
	}else{
		addTrace(myCookie);
	}
	
});
function addTrace(myCookie){
	//if(myCookie)
	var isrc= "http://pi.gewara.com/pi.gif?uk=" + myCookie + buildParams();
	if(!$('gwtc')){
		var img = R.Element("img",{
			id:'gwtc',
			src:isrc
		}).inject(document.body);
		img.setStyles({"width":"1px","height":"1px","position":"fixed","left":"-9999em"});
	}
}
function buildParams(){
	var params = "";
	_gwtc_.each(function(item, index){
		params+= "&" + item[0]+"=" + item[1];
	});
	return params;
}
function getCookie(name){
	var arr,reg=new RegExp("(^| )"+name+"=([^;]*)(;|$)");
	if(arr=document.cookie.match(reg)){
		return unescape(arr[2]);
	}else{
		return "";
	}
	
} 
</script>
