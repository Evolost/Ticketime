<script type="text/javascript">
var Scroll,pullUpEl, pullUpOffset,generatedCount = 0,movieId = "",catchs = true;
function getCookie(cname) {
    var name = cname + "=";
    var ca = document.cookie.split(';');
    for(var i=0; i<ca.length; i++) {
        var c = ca[i];
        while (c.charAt(0)==' ') c = c.substring(1);
        if (c.indexOf(name) != -1) return c.substring(name.length, c.length);
    }
    return "";
}
//动态加载影片
function pullUpAction () {
	var _filmfest = "";
		//app中隐藏下载
	if(getCookie("fromWhere")=="app"){
		if($("downApp")){
			$("downApp").hide();
		}
	}	
	if(catchs){
		setTimeout(function () {
			var el, li, i;
			el = document.getElementById('pullUp');
			R.ajax({
				'url':'/movie/m/choiceMovie.xhtml',
				'callback':function(result){
					if(result.html != ''){
						li = document.createElement('div');
						li.innerHTML = result.html;
						li.querySelectorAll('li').each(function(node){
							node.inject(el,'before');
							bindOpi(node.querySelector('img'));
						});
					}else{
						el.dispose();
						catchs = false;
					}
					pullUpEl.className = '';
					setResize(Scroll,21);
					Scroll.refresh();
				},
				'data':{'pageNo':++generatedCount,'cid':8505180,'ajax':'true','filmfest':_filmfest}
			});
		}, 1000);
	}
}
var flag = true;//锁定每次事件保持唯一
//选择影片绑定事件
function bindOpi(node){
	node.addEvent('click',function(){
		if(!flag || this.parentNode.hasClass('select'))return;
		flag = false;
		if(this.retrieve('store') == null){
			ladingOpi(this.id);
		}else{
			$('opis').innerHTML = node.retrieve('store');
			bindOpiEvent();
			if($('choiceDate'))bindDargOpi();
			flag = true;
		}
		$('xPanel').querySelectorAll('li').each(function(li){
			li.removeClass('select');
		})
		$('movieDetail').innerHTML = this.getNext().innerHTML;
		this.parentNode.addClass('select');
		movieId = this.id;
	})
}

//请求影片的场次
function ladingOpi(mid){
	//alert(8505180)
	movieId = mid;
	R.sendLoad('opis','/movie/m/chooseMovieOpi.xhtml',{'mid':mid,'cid':'8505180','discountid':'','adverId':'','openDate':'2016-02-29'},function(){
		flag = true;
		bindOpiEvent();
		if($('choiceDate'))bindDargOpi();
	})
}
function noSaleInfo(){
			R.alert("特价活动名额已满，您来晚了噢~");
		
}	

//为拉动更多opi日期添加事件
function bindDargOpi(){
	new iScroll('choiceDate', {
		momentum: false,
		bounceLock:true,
		hScrollbar: false,
		lockDirection:false,
		initCallback:function(){
			setResize(this,8);
			this._resize();
		},
		resizeCallback:function(){
			setResize(this,8);
		},
		onBeforeScrollStart:function(e){
			
		}
	});
}

//选择日期绑定事件
function bindOpiEvent(){
	$('opis').querySelectorAll('li').each(function(node){
		node.addEvent('click',function(){
			if(!flag || this.hasClass('select'))return;
			flag = false;
			if(this.retrieve('store') == null){
				R.sendLoad(document.querySelector('div[data-type=opipanel]'),'/movie/m/chooseMovieOpi.xhtml',{'mid':movieId,'cid':'8505180','discountid':'','opiClick':'true','openDate':this.id},function(){
					flag = true;
				},this);
			}else{
				document.querySelector('div[data-type=opipanel]').innerHTML = this.retrieve('store');
				flag = true;
			}
			$('choiceDate').querySelectorAll('li').each(function(li){
				li.removeClass('select');
			})
			this.addClass('select')
		});
	});
	document.querySelector('div[data-type=opipanel]').css('display','block');
}
R.domready(function(){
	//$('xPanel').querySelectorAll('img').each(function(node){
		//bindOpi(node);
	//})
	ladingOpi(278455503);
	
			downApp();
	});
function setResize(that,width){
	var objectelements = that.scroller.querySelectorAll('li');
	if(objectelements[0])that.scroller.css('width',(objectelements[0].clientWidth + width)*objectelements.length);
}

function downApp(){
	var oDoAPP = $('downApp');
	if(oDoAPP){
		oDoAPP.getElement('span[class="close"]').addEvent('click',function(){
			oDoAPP.addClass('none');
		})		
	}
}
